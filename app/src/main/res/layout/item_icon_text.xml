<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--listView 的布局参数没有margin，所以再套一个布局-->
    <LinearLayout
        android:id="@+id/layoutItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:minHeight="72dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivItemIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/ic_icon_warning" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingVertical="12dp">

            <TextView
                android:id="@+id/tvItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="模块未激活" />

            <TextView
                android:id="@+id/tvItemTitleSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:textSize="14sp"
                tools:text="模块版本：v1.0.0" />

            <TextView
                android:id="@+id/tvItemTitleSub2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:textSize="14sp"
                tools:text="commit: c1271c3e" />

            <TextView
                android:id="@+id/tvItemTitleSub3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:textSize="14sp"
                tools:text="日期: 2023/02/17" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>


