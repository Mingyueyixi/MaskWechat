<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.lu.magic.ui.view.AutoRatioImageView
        android:id="@+id/iv_qr_pay_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_wxpay_qr" />

    <ImageView
        android:id="@+id/ivDownload"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:scaleType="centerInside"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_icon_download"
        app:layout_constraintEnd_toEndOf="@+id/iv_qr_pay_img"
        app:layout_constraintStart_toStartOf="@+id/iv_qr_pay_img"
        app:layout_constraintTop_toBottomOf="@+id/iv_qr_pay_img"
        app:tint="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>
